{
    "manifest_version": 3,
    "name": "Janka Finance",
    "version": "1.0",
    "description": "Opens a new tab to a specific webpage once every 24 hours or when the extension icon is clicked",
    "permissions": ["alarms", "tabs"],
    "action": {
      "default_popup": ""
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }